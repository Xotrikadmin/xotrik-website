{
    "name": "Xotrik FullStack Devcontainer",
    "dockerComposeFile": "container-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspaces",
    // Configure tool-specific properties
    "customizations": {
        "vscode": {
            "extensions": [
                // JavaScript/TypeScript
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-vscode.vscode-typescript-next",
                // React
                "dsznajder.es7-react-js-snippets",
                // Node.js
                "christian-kohler.npm-intellisense",
                // Git
                "eamodio.gitlens",
                // AI Assistance
                "github.copilot",
                "github.copilot-chat",
                // Docker
                "ms-azuretools.vscode-docker",
                "google.geminicodeassist"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": true
                },
                "files.eol": "\\n",
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },
    "postCreateCommand": "cd /workspaces && mkdir -p node_modules && chmod 777 node_modules && npm install",
    // Mount local history for bash
    "mounts": [
        "source=${localWorkspaceFolderBasename}-bashhistory,target=/commandhistory,type=volume"
    ],
    "forwardPorts": [
        5173
    ],
    "portsAttributes": {
        "5173": {
            "label": "Frontend",
            "onAutoForward": "notify"
        }
    },
    // Set environment variables
    "remoteEnv": {
        "NODE_ENV": "development"
    }
}